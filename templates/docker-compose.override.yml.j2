version: "3"

services:
  php:
    image: wodby/wordpress:$WORDPRESS_TAG
    environment:
      PHP_FPM_CLEAR_ENV: "no"
    volumes:
      - codebase:/var/www/html

  nginx:
    volumes:
      - codebase:/var/www/html

    networks:
      - {{ traefik.network }}

  traefik:
    networks:
      - {{ traefik.network }}

    ports:
      - '{{ traefik.http_port }}:80'
      - '{{ traefik.https_port}}:443'
volumes:
  codebase:

networks:
  {{ traefik.network }}
    external:
      name: {{ traefik.network }}
